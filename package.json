{
  "name": "nan-design",
  "private": true,
  "type": "module",
  "scripts": {
    "demo:dev": "pnpm --filter @nan-design/demo dev",
    "demo:build": "pnpm --filter @nan-design/demo build",
    "doc:dev": "pnpm --filter @nan-design/docs dev",
    "build": "pnpm --filter @nan-design/react build",
    "icons:build": "pnpm --filter @nan-design/icons build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint ./**/*.{css,scss,vue,html}",
    "lint:style-fix": "stylelint ./**/*.{css,scss,vue,html} --fix",
    "prepare": "husky",
    "eslint": "npx eslint --ext .ts,.tsx . --fix",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "sass": "^1.80.6",
    "sass-loader": "^16.0.3",
    "stylelint": "^16.10.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,scss}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  }
}
